<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_todo_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    android:paddingTop="7dp"
    android:paddingBottom="7dp"
    android:background="@drawable/bg_round_dialog">
<!--    android:background="@drawable/bg_round_dialog">-->


    <LinearLayout
        android:id="@+id/list_todo_personal_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorWhite"
        android:elevation="7dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/list_todo_personal_iv_icon"
            android:layout_width="42dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="21dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/list_todo_personal_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:lineSpacingExtra="9sp"
                android:textColor="#38454c"
                android:textSize="18sp"
                android:fontFamily="@font/noto_sans_kr_bold"
                tools:text="형광펜 사기" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/list_todo_personal_iv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="9dp"
                    android:src="@drawable/ic_navigation" />

                <TextView
                    android:id="@+id/list_todo_personal_tv_subtitle"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="5sp"
                    android:textColor="#d2d9df"
                    android:textSize="10sp"
                    tools:text="아트박스 대학로점, 내일, 오후 1시" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/list_todo_personal_iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="5dp"
            android:padding="10dp"
            android:src="@drawable/arrow_right" />
    </LinearLayout>
</LinearLayout>