<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_group_layout_item"
    android:layout_width="120dp"
    android:layout_height="185dp"
    android:layout_marginEnd="12dp"
    android:background="@drawable/bg_round_group_default"
    android:orientation="vertical">

    <ImageView
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_group_plus" />

    <LinearLayout
        android:id="@+id/list_group_layout_front"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_round_group_1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/list_group_iv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="9dp"
            android:src="@drawable/ic_group_plus" />

        <TextView
            android:id="@+id/list_group_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:includeFontPadding="false"
            android:lineSpacingExtra="9sp"
            android:textColor="@color/colorGroup1"
            android:textSize="18sp"
            tools:text="가족" />

        <TextView
            android:id="@+id/list_group_tv_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:includeFontPadding="false"
            android:lineSpacingExtra="5sp"
            android:textColor="@color/colorGroup1"
            android:textSize="10sp"
            tools:text="나, 김하나 외 2명" />

        <TextView
            android:id="@+id/list_group_tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:includeFontPadding="false"
            android:layout_marginTop="20dp"
            android:lineSpacingExtra="5sp"
            android:textColor="@color/colorGroup1"
            android:textSize="10sp"
            tools:text="일정 3개, 약속 1개" />

        <FrameLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp">

            <ImageView
                android:id="@+id/list_group_iv_image4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="45dp"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/list_group_iv_image3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="30dp"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/list_group_iv_image2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="15dp"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/list_group_iv_image1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitXY" />
        </FrameLayout>
    </LinearLayout>

</FrameLayout>