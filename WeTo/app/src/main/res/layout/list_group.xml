<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/list_group_layout_item"
    android:layout_width="120dp"
    android:layout_height="183dp"
    android:layout_marginEnd="12dp"
    android:background="@drawable/bg_round_group_default">

    <ImageView
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:src="@drawable/ic_group_plus"
        android:layout_gravity="center"/>

    <LinearLayout
        android:id="@+id/list_group_layout_front"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_round_group_1"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/list_group_iv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_group_plus"
            android:layout_marginTop="18dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="9dp"/>
        <TextView
            android:id="@+id/list_group_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/colorGroup1"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="3dp"
            android:lineSpacingExtra="9sp"
            android:textStyle="bold"
            tools:text="가족"/>
        <TextView
            android:id="@+id/list_group_tv_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@color/colorGroup1"
            android:lineSpacingExtra="5sp"
            tools:text="나, 김하나 외 2명"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="18dp"/>
        <TextView
            android:id="@+id/list_group_tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:textSize="10sp"
            android:textColor="@color/colorGroup1"
            android:lineSpacingExtra="5sp"
            tools:text="일정 3개, 약속 1개"
            android:layout_marginBottom="15dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp">
            <ImageView
                android:id="@+id/list_group_iv_image4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:layout_marginStart="45dp"/>
            <ImageView
                android:id="@+id/list_group_iv_image3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:layout_marginStart="30dp"/>
            <ImageView
                android:id="@+id/list_group_iv_image2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:layout_marginStart="15dp"/>
            <ImageView
                android:id="@+id/list_group_iv_image1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"/>
        </FrameLayout>
    </LinearLayout>

</FrameLayout>