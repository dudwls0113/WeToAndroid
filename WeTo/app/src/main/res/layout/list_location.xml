<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_location_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackGray"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/list_todo_personal_iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/img_gray_gps" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_location_tv_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:layout_marginBottom="6dp"
            android:includeFontPadding="false"
            android:textColor="#38454c"
            android:textSize="16sp"
            tools:text="형광펜 사기" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/list_location_tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/noto_sans_kr_medium"
                android:includeFontPadding="false"

                android:textColor="#d2d9df"
                android:textSize="10sp"
                tools:ignore="SmallSp"
                tools:text="아트박스 대학로점, 내일, 오후 1시" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="25dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_location_tv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:textColor="@color/colorSearchGray"
            android:textSize="10sp"
            tools:text="카테고리" />

        <TextView
            android:id="@+id/list_location_tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:gravity="end"
            android:lineSpacingExtra="5sp"
            android:textColor="@color/colorSearchGray"
            android:textSize="10sp"
            tools:text="1.2km" />
    </LinearLayout>


    <!--    <View-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="1dp"-->
    <!--        android:background="#e3e7ec" />-->
</LinearLayout>