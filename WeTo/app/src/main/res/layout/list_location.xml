<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_location_item"
    android:layout_width="match_parent"
    android:background="@color/colorBackGray"
    android:layout_height="60dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/list_todo_personal_iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/img_gps" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_location_tv_place"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:lineSpacingExtra="9sp"
            android:textColor="#38454c"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="형광펜 사기" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/list_location_tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:lineSpacingExtra="5sp"
                android:textColor="#d2d9df"
                android:textSize="10sp"
                tools:ignore="SmallSp"
                tools:text="아트박스 대학로점, 내일, 오후 1시" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="25dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_location_tv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카테고리"
            android:layout_gravity="end"
            android:textStyle="bold"
            android:textColor="@color/colorSearchGray"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/list_location_tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:lineSpacingExtra="5sp"
            android:layout_gravity="end"
            android:textStyle="bold"
            android:text="1,2km"
            android:textColor="@color/colorSearchGray"
            android:textSize="10sp" />
    </LinearLayout>


</LinearLayout>