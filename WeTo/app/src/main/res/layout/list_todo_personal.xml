<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_todo_personal_item"
    android:layout_width="match_parent"
    android:background="@color/colorGroup6"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/list_todo_personal_iv_icon"
        android:layout_width="42dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:src="@color/colorGroup6"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="21dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_todo_personal_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="6dp"
            android:layout_weight="1"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:includeFontPadding="false"
            android:lineSpacingExtra="9sp"
            android:textColor="#38454c"
            android:textSize="18sp"
            tools:text="형광펜 사기" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/list_todo_personal_iv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="9dp"
                android:src="@drawable/ic_navigation" />

            <TextView
                android:id="@+id/list_todo_personal_tv_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="marquee"
                android:fontFamily="@font/noto_sans_kr_medium"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:lineSpacingExtra="5sp"
                android:marqueeRepeatLimit="2"
                android:singleLine="true"
                android:textColor="#d2d9df"
                android:textSize="10sp"
                tools:text="아트박스 대학로점, 내일, 오후 1시" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/list_todo_personal_iv_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="5dp"
        android:padding="20dp" />
</LinearLayout>