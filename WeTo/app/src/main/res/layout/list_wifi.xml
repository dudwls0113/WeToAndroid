<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/list_wifi_layout_item"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/list_wifi_iv_strength"
            android:layout_width="41dp"
            android:layout_height="35dp"
            android:padding="10dp"
            android:src="@drawable/img_wifi_3"
            android:layout_marginStart="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="12dp"/>
        <TextView
            android:id="@+id/list_wifi_tv_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#38454c"
            android:lineSpacingExtra="8sp"
            tools:text="iptime5G"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/list_wifi_tv_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#b0bec5"
            android:lineSpacingExtra="5sp"
            android:layout_gravity="center_vertical"
            android:text="연결된 와이파이"
            android:layout_marginEnd="24dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e3e7ec"/>

</LinearLayout>