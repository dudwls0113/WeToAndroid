<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_wifi_layout_item"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/list_wifi_iv_strength"
            android:layout_width="41dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="12dp"
            android:padding="10dp"
            android:src="@drawable/img_wifi_3" />

        <TextView
            android:id="@+id/list_wifi_tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:includeFontPadding="false"
            android:lineSpacingExtra="8sp"
            android:textColor="#38454c"
            android:textSize="16sp"

            tools:text="iptime5G" />

        <TextView
            android:id="@+id/list_wifi_tv_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:lineSpacingExtra="5sp"
            android:text="연결된 와이파이"
            android:textColor="#b0bec5"
            android:textSize="10sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e3e7ec" />

</LinearLayout>